{% extends 'clean.html.twig' %}

{% block title %}Blog de photographie argentique{% endblock %}

{% block subtitleh %}Photographie à l'ancienne{% endblock %}

{% block css %}
<link rel="stylesheet" href="{{ asset('clean/css/error.css') }}">
{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>
                    Oops !</h1>
                <h2>
                    404 Page introuvable</h2>
                <div class="error-details">
                    La page que vous demandez n'existe pas !
                </div>
                <div class="error-actions">
                    <a href="{{ path('home') }}" class="btn btn-primary btn-lg">
                        <span class="glyphicon glyphicon-home"></span>
                        Retourner à l'accueil 
                    </a>
                    <a href="#" class="btn btn-default btn-lg">
                        <span class="glyphicon glyphicon-envelope"></span>
                        Contacter le support 
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

