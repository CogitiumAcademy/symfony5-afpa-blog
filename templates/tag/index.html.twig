{% extends 'clean.html.twig' %}

{% block title %}Les articles de #{{ tag.name }}{% endblock %}



{% block body %}
        <!-- Main Content-->
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">

                    <h2>Tag : #{{ tag.name }}</h2>
                    
                    {% for post in tag.posts %}
                        <!-- Post preview-->
                        <div class="post-preview post-content">
                            <a href="{{ path('post_view', {slug: post.slug}) }}">
                                <h2 class="post-title">{{ post.title }}</h2>
                                <img src="{{ post.image }}" alt="">
                                <h3 class="post-subtitle">{{ post.content  | u.truncate(150, '...')  | raw }}</h3>
                            </a>
                            <p class="post-meta">
                                Rédigé par {{ post.user.email }}
                                - Publié {{ post.createdAt | ago }}
                                - Classé dans {{ post.category.name }}
                            </p>
                        </div>
                        <!-- Divider-->
                        <hr class="my-4" />

                    {% endfor %}

                    <!-- Pager-->
                    <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts →</a></div>
                </div>
            </div>
        </div>
{% endblock %}
